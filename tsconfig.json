        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "./dist/tsc.js",
        "sourceMap": true
    },
    "include": [
        "./*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}